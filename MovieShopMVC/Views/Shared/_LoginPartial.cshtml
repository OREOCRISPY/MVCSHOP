@using ApplicationCore.ServiceInterfaces
@inject ICurrentUser currentUser

@if (User.Identity.IsAuthenticated)
{
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @currentUser.FullName
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a asp-action="EditProfile" asp-controller="Account" class="dropdown-item" asp-route-id="">@currentUser.FullName</a>
                    <a asp-action="Logout" asp-controller="Account" class="dropdown-item" asp-route-id="">Log Out</a>
                    <a asp-action="MyMovie" asp-controller="Account" class="dropdown-item" asp-route-id="">My Movie</a>
                </div>
            </li>
        </ul>
    </div>
}
else
{
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item pr-4">
                <a class="btn btn-primary" asp-controller="Account" asp-action="Login"> Login </a>
            </li>
            <li class="nav-item pr-4">
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register"> Register </a>
            </li>
        </ul>
    </div>
}